<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fsck.k9.activity.AudioChallenge">


    <EditText
        android:id="@+id/audio_challenge_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter what you heard."
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="292dp" />

    <Button
        android:id="@+id/button_play_sound_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_challenge_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Play Again"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="351dp" />

    <Button
        android:id="@+id/button_sound_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audio_challenge_input"
        android:layout_alignParentEnd="true"
        android:text="OK"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="351dp" />

</android.support.constraint.ConstraintLayout>
