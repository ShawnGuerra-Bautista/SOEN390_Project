<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.fsck.k9.activity.drunkmode.MathChallenge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/math_challenge_title"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:text="@string/drunk_mode_math_title"
            android:textAlignment="center"
            android:textSize="30sp" />

        <!--TODO: replace equation placeholder-->
        <TextView
            android:id="@+id/math_challenge_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="-7 + -7"
            android:textAlignment="center"
            android:textSize="125sp" />


        <LinearLayout
            android:id="@+id/math_challenge_inputs"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:orientation="horizontal">

            <!--Todo add plus/minus option-->
            <NumberPicker
                android:id="@+id/left_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <NumberPicker
                android:id="@+id/right_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="@string/drunk_mode_math_submit" />

    </LinearLayout>
</FrameLayout>
